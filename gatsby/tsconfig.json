{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2015", "DOM"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": false,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/test-utils/*": ["src/test-utils/*"],
      "@/components/*": ["src/components/*"],
      "@/field-extensions/*": ["src/field-extensions/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/mockdata/*": ["src/__mockdata__/*"],
      "@/utils": ["src/utils/index"],
      "@nice-digital/gatsby-source-bnf": ["plugins/gatsby-source-bnf/index"]
    }
  },
  "include": ["./**/*", "./**/*.json", "../jest.config.js"],
  "exclude": ["dist", ".gatsby"]
}
