{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "../",
    // TODO uncomment these types when upgrading to wdio8
    // "types": ["node", "@wdio/globals/types", "@wdio/cucumber-framework"]
    "types": ["node", "webdriverio/async", "@wdio/cucumber-framework"]
  },
  "include": ["./**/*"],
  "exclude": [
    "dist",
    "allure-report",
    "docker-output",
    "bnf-website-build/*",
    "bnfc-website-build/*"
  ]
}
