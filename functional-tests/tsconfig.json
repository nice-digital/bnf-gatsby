{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "../",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveSymlinks": true,
    "types": ["node", "@wdio/globals/types", "@wdio/cucumber-framework"]
  },
  "include": ["./**/*"],
  "exclude": [
    "dist",
    "allure-report",
    "docker-output",
    "bnf-website-build/*",
    "bnfc-website-build/*"
  ]
}
